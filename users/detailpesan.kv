#:kivy 2.3.0
<DetailPesanScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Header
        MDBoxLayout:
            padding: dp(10)
            size_hint_y: None
            height: dp(60)
            md_bg_color: app.theme_cls.primary_color

            MDIconButton:
                icon: 'chevron-left'
                on_release: app.root.current = 'pesan'

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(5)
                MDLabel:
                    text: "Admin"
                    font_style: "Subtitle1"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "left"  # Align text to the left
                    font_name: 'assets/font/Montserrat-Regular.otf'  # Custom font

                MDLabel:
                    text: "Sistem Pengaduan Desa"
                    font_style: "Caption"
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "left"  # Align text to the left
                    font_name: 'assets/font/Montserrat-Regular.otf'  # Custom font

        # Spacer to create more vertical space
        Widget:
            size_hint_y: None
            height: dp(20)  # Adjust the height as needed for spacing

        # Notifikasi Judul dan Waktu
        BoxLayout:
            orientation: 'vertical'
            padding: dp(15)
            spacing: dp(10)  # Added spacing between elements
            size_hint_y: None
            height: dp(100)

            MDLabel:
                id: notif_title
                text: "Pesan tidak tersedia"
                font_style: "Subtitle1"
                size_hint_y: None
                height: self.texture_size[1]
                halign: "left"  # Align text to the left
                font_name: 'assets/font/Montserrat-Regular.otf'  # Custom font

            MDLabel:
                id: notif_time
                text: "Waktu tidak tersedia"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]
                halign: "center"  # Center-align text
                pos_hint: {"center_x": 0.5}  # Center horizontally
                font_name: 'assets/font/Montserrat-Regular.otf'  # Custom font

        # Chat messages
        ScrollView:
            MDBoxLayout:
                id: message_container
                orientation: 'vertical'
                padding: dp(10)
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height
