#:kivy 2.3.0
<AdminArsipScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Header
        MDBoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: dp(10)
            spacing: dp(10)

            MDIconButton:
                icon: 'arrow-left'
                on_release:
                    app.root.current = 'admin_daftar'  # Kembali ke halaman daftar
                theme_text_color: 'Custom'
                text_color: (1, 1, 1, 1)

            MDLabel:
                text: "Arsip Pengaduan"
                font_size: '30sp'
                font_name: 'assets/font/Montserrat-Bold.otf'
                bold: True
                halign: 'center'
                valign: 'middle'
                size_hint_x: 1

        # Konten utama
        ScrollView:
            size_hint: (1, None)
            size: 350, 470
            
            MDList:
                id: arsip_list  # Pastikan ID ini sesuai
                padding: dp(20)  # Menambahkan padding di sekitar list
                spacing: dp(5)  # Menambahkan jarak antar item di list

        # Bottom Navigation Bar
        MDBottomNavigation:
            panel_color: "#EEEEEE"
            text_color_active: "#888888"
            text_color_normal: "#888888"
            icon_color_active: "#888888"
            icon_color_normal: "#888888"

            MDBottomNavigationItem:
                name: 'home'
                text: 'Home'
                icon: 'home'
                on_tab_press: app.root.current = 'admin_home'

            MDBottomNavigationItem:
                name: 'pesan'
                text: 'Pesan'
                icon: 'message'
                on_tab_press: app.root.current = 'admin_pesan'

            MDBottomNavigationItem:
                name: 'pengaduan'
                text: 'Pengaduan'
                icon: 'alert-circle-outline'
                on_tab_press: app.root.current = 'admin_pengaduan'

            MDBottomNavigationItem:
                name: 'profil'
                text: 'Profil'
                icon: 'account'
                on_tab_press: app.root.current = 'admin_profil'