#:kivy 2.3.0

<AdminDetailPesanScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Header
        MDBoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: [dp(10), 0, dp(10), 0]  # Padding untuk elemen horizontal
            spacing: dp(10)
            md_bg_color: app.theme_cls.primary_color

            MDIconButton:
                icon: 'chevron-left'
                size_hint: None, None
                size: dp(40), dp(40)  # Ukuran tombol kembali
                pos_hint: {'center_y': 0.5}
                on_release: app.root.current = 'admin_pesan'  # Navigasi kembali

            MDLabel:
                text: "Detail Notifikasi"
                font_style: "H6"  # Ukuran font yang lebih besar
                font_name: "assets/font/Montserrat-Bold.otf"
                size_hint_x: 1  # Membuat label menempati ruang yang tersedia
                halign: 'center'  # Teks di tengah secara horizontal
                valign: 'middle'  # Teks di tengah secara vertikal
                pos_hint: {'center_y': 0.5}

        # Chat messages
        ScrollView:
            MDBoxLayout:
                id: message_list  # ID untuk daftar pesan
                orientation: 'vertical'
                padding: dp(10)
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height
