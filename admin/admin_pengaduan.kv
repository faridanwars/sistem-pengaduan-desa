#:kivy 2.3.0

<AdminPengaduanScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Kotak header
        BoxLayout:
            size_hint: (1, 0.32)
            padding: [20, 0, 0, 20]
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 0.0, 0.5, 0.5, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 30, 30]

            # Teks di header
            Label:
                text: "Halo Admin"
                font_size: '28sp'
                font_name: 'assets/font/Montserrat-Bold.otf'
                bold: True 
                halign: 'left'
                size_hint_x: None
                size_hint_y: None
                height: self.texture_size[1]
                width: self.texture_size[0]

            Label:
                text: "Sistem Pengaduan Desa"
                font_size: '12sp'
                font_name: 'assets/font/Montserrat-Regular.otf'
                halign: 'left'
                size_hint_x: None
                size_hint_y: None
                height: self.texture_size[1]
                width: self.texture_size[0]
                valign: 'top'

        Label:
            size_hint_y: None
            height: dp(20)  # Atur tinggi spacer sesuai kebutuhan

        # BoxLayout Button
        BoxLayout:
            orientation: 'vertical' 
            size_hint_y: None
            height: dp(250)  
            padding: dp(30)
            spacing: dp(50) 

            MDRectangleFlatButton:
                text: "Daftar Pengaduan"
                size_hint_y: None
                height: dp(40) 
                size_hint_x: 1
                text_color: (1, 1, 1, 1)
                on_release:
                    app.root.current = 'admin_daftar'

            MDRectangleFlatButton:
                text: "Arsip Pengaduan"
                size_hint_y: None
                height: dp(40)
                size_hint_x: 1
                text_color: (1, 1, 1, 1)
                on_release:
                    app.root.current = 'admin_arsip'

        # Bottom Navigation Bar
        MDBottomNavigation:
            panel_color: "#EEEEEE"
            text_color_active: "#888888"
            text_color_normal: "#888888"
            icon_color_active: "#888888"
            icon_color_normal: "#888888"

            MDBottomNavigationItem:
                name: 'home'
                text: 'Home'
                icon: 'home'
                on_tab_press: app.root.current = 'admin_home'

            MDBottomNavigationItem:
                name: 'pesan'
                text: 'Pesan'
                icon: 'message'
                on_tab_press: app.root.current = 'admin_pesan'

            MDBottomNavigationItem:
                name: 'pengaduan'
                text: 'Pengaduan'
                icon: 'alert-circle-outline'
                on_tab_press: app.root.current = 'admin_pengaduan'

            MDBottomNavigationItem:
                name: 'profil'
                text: 'Profil'
                icon: 'account'
                on_tab_press: app.root.current = 'admin_profil'
